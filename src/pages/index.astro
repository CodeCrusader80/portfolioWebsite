---
import Layout from '../layouts/Layout.astro';
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import "../../public/styles/global.css";
import image from "../../public/images/intro.jpg";
---

<Layout title="Sinno Technologies - Jamil Sinno's Portfolio">
	<Header />
	<main>
		<Hero />
		<div class="container">
			<img src={image} alt="Jamil Sinno's personal photo">
		</div>
	</main>
</Layout>

<style>
	main {
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		padding: 1rem;
	}
	.container {
		padding: 1em;
		min-width: 50%;
		display: flex;
		flex-direction: row;
		justify-content: center;
		align-items: center;
	}

	.container img{
		width: 100%;
		max-height: 100%;
		border-radius: 2em;
		box-shadow: 1em 1em 0.5em rgba(0, 0, 0, 0.5)
	}

	@media screen and (max-width: 1080px){
		main{
			flex-direction: column;
			justify-content: center;
			align-items: center;
		}
	}
</style>
