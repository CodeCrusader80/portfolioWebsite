---
import Layout from '../layouts/Layout.astro';
import Header from "../components/Header.astro";
import ServicesPage from "../components/Services.astro";
import Projects from "../components/Projects.astro";
import "../styles/global.css";
---

<Layout title="Sinno Technologies - Jamil Sinno's Portfolio">
	<Header />
    <main>
        <ServicesPage />
		<Projects />
    </main>
</Layout>

<style>
	main {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		padding: 1rem 3rem;
	}

	@media screen and (max-width: 1080px){
		main{
			flex-direction: column;
			justify-content: center;
			align-items: center;
		}
	}
</style>
